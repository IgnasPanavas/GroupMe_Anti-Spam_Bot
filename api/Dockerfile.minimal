FROM public.ecr.aws/lambda/python:3.9

# Copy the lambda function
COPY api/lambda_function.py ${LAMBDA_TASK_ROOT}/lambda_function.py

# Copy model files
COPY data/training/spam_detection_model.pkl ${LAMBDA_TASK_ROOT}/data/training/
COPY data/training/tfidf_vectorizer.pkl ${LAMBDA_TASK_ROOT}/data/training/

# Create the directory structure
RUN mkdir -p ${LAMBDA_TASK_ROOT}/data/training

# Set the CMD to your handler
CMD [ "lambda_function.lambda_handler" ]
