# SpamShield Platform Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/spamshield
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=spamshield
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration (optional, for caching and pub/sub)
REDIS_URL=redis://localhost:6379/0

# API Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=info
ALLOWED_ORIGINS=*

# Platform Settings
MAX_WORKERS=3
GROUPS_PER_WORKER=5

# GroupMe API Configuration
GROUPME_API_KEY=your_groupme_api_key_here
GROUPME_BOT_USER_ID=your_bot_user_id_here

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=90

# Development
SQL_DEBUG=false
DEBUG_MODE=false
